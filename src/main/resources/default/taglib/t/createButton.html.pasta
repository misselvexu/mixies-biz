<i:arg type="String" name="url"/>
<i:arg type="String" name="class" default=""/>

<i:pragma name="description">Provides a primary button which links to the given url, with a generic label to create a new entity.</i:pragma>

<i:if test="isFilled(url)">
    <a class="btn btn-primary @class" href="@url">
        <i class="fa fa-plus"></i> @i18n("Model.create")
    </a>
</i:if>
