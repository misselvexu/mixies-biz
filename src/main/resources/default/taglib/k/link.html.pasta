<i:arg type="String" name="link" description="Contains a url or link."/>
<i:arg type="String" name="linkName" description="Contains a speaking name or description."/>
<i:arg type="String" name="linkIcon" default="fas fa-external-link-alt" description="Defines the icon left to the linkName."/>

<i:pragma name="description">
    Renders a link uniformly with a speaking name or description.
</i:pragma>

<a href="@link">
    <i class="@linkIcon"></i>&nbsp;@linkName
</a>